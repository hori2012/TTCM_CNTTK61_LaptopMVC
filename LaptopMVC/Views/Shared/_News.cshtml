@model IEnumerable<LaptopMVC.Models.tb_news>
@{
    <div class="blogs">
        <div class="container">
            <div class="row">
                <div class="col text-center">
                    <div class="section_title">
                        <h2>Latest News</h2>
                    </div>
                </div>
            </div>
            <div class="row blogs_container">
                @foreach (var item in Model)
                {
                    <div class="col-lg-4 blog_item_col">
                        <div class="blog_item">
                            <div class="blog_background" style="background-image: url(../ManagerUploads/@item.images)"></div>
                            <div class="blog_content d-flex flex-column align-items-center justify-content-center text-center">
                                <h6 class="blog_title">@item.title</h6>
                                <span class="blog_meta">by admin | @item.createdate.ToShortDateString()</span>
                                @Html.ActionLink("Read more", "Detail", "New", new { id = item.id }, new { @class = "blog_more" })
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}

