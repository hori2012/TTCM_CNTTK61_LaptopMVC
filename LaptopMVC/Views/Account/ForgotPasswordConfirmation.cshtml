@{
    ViewBag.Title = "Forgot Password Confirmation";
}


<div class="container" style="margin: auto; width: 100%; margin-top: 160px; background-color:#f0f0f1; border-radius:30px; padding:10px">
    <h4 style="text-align:center;">@ViewBag.Title.</h4>
    <div class="row">
        <div class="col-md-8 offset-md-3">
            <hgroup class="title">
            </hgroup>
            <div>
                <p>
                    Please check your email to reset your password.
                </p>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


