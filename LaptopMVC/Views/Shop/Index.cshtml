@model PagedList.IPagedList<LaptopMVC.Models.tb_product>
@using PagedList.Mvc
@{
    ViewBag.Title = "Shop";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" type="text/css" href="~/Content/client/styles/categories_styles.css">
<link rel="stylesheet" type="text/css" href="~/Content/client/styles/categories_responsive.css">
<div class="container product_section_container">
    <div class="row">
        <div class="col product_section clearfix">
            <!-- Breadcrumbs -->

            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    @{string txt = @ViewBag.Categories; }
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="active"><i class="fa fa-angle-right" aria-hidden="true"></i>@Html.ActionLink(" " + txt + "'s", "Index", "Shop", new { categories = ViewBag.Categories }, null)</li>
                </ul>
            </div>
            <!-- Sidebar -->

            <div class="sidebar">
                <div class="sidebar_section">
                    <div class="sidebar_title">
                        <h5>Product Category</h5>
                    </div>
                    <ul class="sidebar_categories">
                        @{

                            if (ViewBag.Categories.Contains("Gaming"))
                            {
                                <li class="active"><i class="fa fa-angle-double-right " aria-hidden="true"></i>@Html.ActionLink(" Gaming's", "Index", "Shop", new { categories = "Gaming" }, null)</li>
                                <li>@Html.ActionLink("Office's", "Index", "Shop", new { categories = "Office" }, null)</li>
                                <li>@Html.ActionLink("Student's", "Index", "Shop", new { categories = "Student" }, null)</li>
                                <li>@Html.ActionLink("Shop's", "Index", "Shop", new { categories = "Shop" }, null)</li>
                            }
                            else if (ViewBag.Categories.Contains("Office"))
                            {

                                <li>@Html.ActionLink("Gaming's", "Index", "Shop", new { categories = "Gaming" }, null)</li>
                                <li class="active"><i class="fa fa-angle-double-right " aria-hidden="true"></i>@Html.ActionLink(" Office's", "Index", "Shop", new { categories = "Office" }, null)</li>
                                <li>@Html.ActionLink("Student's", "Index", "Shop", new { categories = "Student" }, null)</li>
                                <li>@Html.ActionLink("Shop's", "Index", "Shop", new { categories = "Shop" }, null)</li>
                            }
                            else if (ViewBag.Categories.Contains("Student"))
                            {

                                <li>@Html.ActionLink("Gaming's", "Index", "Shop", new { categories = "Gaming" }, null)</li>
                                <li>@Html.ActionLink("Office's", "Index", "Shop", new { categories = "Office" }, null)</li>
                                <li class="active"><i class="fa fa-angle-double-right " aria-hidden="true"></i>@Html.ActionLink(" Student's", "Index", "Shop", new { categories = "Student" }, null)</li>
                                <li>@Html.ActionLink("Shop's", "Index", "Shop", new { categories = "Shop" }, null)</li>
                            }
                            else
                            {

                                <li>@Html.ActionLink("Gaming's", "Index", "Shop", new { categories = "Gaming" }, null)</li>
                                <li>@Html.ActionLink("Office's", "Index", "Shop", new { categories = "Office" }, null)</li>
                                <li>@Html.ActionLink("Student's", "Index", "Shop", new { categories = "Student" }, null)</li>
                                <li class="active"><i class="fa fa-angle-double-right active" aria-hidden="true"> </i>@Html.ActionLink(" Shop's", "Index", "Shop", new { categories = "Shop" }, null)</li>
                            }
                        }

                    </ul>
                </div>
                <!-- Filtering -->
                <div class="sidebar_section">
                    <div class="sidebar_title">
                        Chip
                    </div>
                    <input class="filter_product" type="checkbox" name="Core i3" value="i3" style="margin:10px" /><span>Core i3</span>  <br />
                    <input class="filter_product" type="checkbox" name="Core i3" value="i5" style="margin:10px" /><span>Core i5</span>  <br />
                    <input class="filter_product" type="checkbox" name="Core i3" value="i7" style="margin:10px" /><span>Core i7</span>  <br />
                    <input class="filter_product" type="checkbox" name="Core i3" value="i9" style="margin:10px" /><span>Core i9</span>  <br />
                    <input class="filter_product" type="checkbox" name="Rygen R3" value="R3" style="margin:10px" /><span>Rygen R3</span>  <br />
                    <input class="filter_product" type="checkbox" name="Rygen R5" value="R5" style="margin:10px" /><span>Rygen R5</span>  <br />
                    <input class="filter_product" type="checkbox" name="Rygen R7" value="R7" style="margin:10px" /><span>Rygen R7</span>  <br />
                    <input class="filter_product" type="checkbox" name="Rygen R9" value="R9" style="margin:10px" /><span>Rygen R9</span>  <br />
                </div>
                <div class="sidebar_section">
                    <div class="sidebar_title">
                        Ram
                    </div>
