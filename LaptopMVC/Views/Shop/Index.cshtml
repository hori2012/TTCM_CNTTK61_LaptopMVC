                    <input class="filter_product" type="checkbox" name="16gb" value="16gb" style="margin:10px" /><span>16gb</span>  <br />
                    <input class="filter_product" type="checkbox" name="32gb" value="32gb" style="margin:10px" /><span>32gb</span>  <br />
                    <input class="filter_product" type="checkbox" name="64gb" value="64gb" style="margin:10px" /><span>64gb</span>  <br />
                </div>
                <div class="sidebar_section">
                    <div class="sidebar_title">
                        Screen
                    </div>
                    <input class="filter_product" type="checkbox" name="13 inch" value="13 inch" style="margin:10px" /><span>About 13 inch</span>  <br />
                    <input class="filter_product" type="checkbox" name="14 inch" value="14 inch" style="margin:10px" /><span>About 14 inch</span>  <br />
                    <input class="filter_product" type="checkbox" name="15 inch" value="15 inch" style="margin:10px" /><span>Over 15 inch</span>  <br />
                </div>
                <div class="sidebar_section">
                    <div class="sidebar_title">
                        HardDrive
                    </div>
                    <input class="filter_product" type="checkbox" name="128gb" value="128gb" style="margin:10px" /><span>SSD 128gb</span>  <br />
                    <input class="filter_product" type="checkbox" name="256gb" value="256gb" style="margin:10px" /><span>SSD 256gb</span>  <br />
                    <input class="filter_product" type="checkbox" name="512gb" value="512gb" style="margin:10px" /><span>SSD 512gb</span>  <br />
                    <input class="filter_product" type="checkbox" name="1tb" value="1tb" style="margin:10px" /><span>SSD 1tb</span>  <br />
                    <input class="filter_product" type="checkbox" name="trên 1tb" value="trên 1tb" style="margin:10px" /><span>Over 1tb</span>  <br />
                </div>
            </div>

