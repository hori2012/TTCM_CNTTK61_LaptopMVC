                                {
                                    string categories = ViewBag.Categories;
                                    string key = ViewBag.Keywords;
                                    <div class="form-group">
                                        <input type="text" class="form-control" value="@key" name="searching" placeholder="Name laptop" style="width:650px; max-width: 60%" />
                                        <input type="text" value="@categories" name="categories" style="display:none;" />
                                        <input type="submit" class="btn btn-primary" value="search" style=" max-width: 30%" />
                                    </div>
                                }
                            </div>
                            <br />
                            <div class="product_sorting_container product_sorting_container_top">
                                <ul class="product_sorting">
                                    <li>
                                        <span class="type_sorting_text">Sorting</span>
                                        <i class="fa fa-angle-down"></i>
                                        <ul class="sorting_type">
                                            <li class="type_sorting_btn" data-isotope-option='{ "sortBy": "original-order" }'><span>Default</span></li>
                                            <li class="type_sorting_btn" data-isotope-option='{ "sortBy": "price" }'><span>Price</span></li>
                                            <li class="type_sorting_btn" data-isotope-option='{ "sortBy": "name" }'><span>Name</span></li>
                                        </ul>
                                    </li>
                                    <li>
                                        <span class="num_sorting_text">Show</span>
                                        <i class="fa fa-angle-down"></i>
                                        <ul class="sorting_num">
                                            <li class="num_sorting_btn"><span>Default</span></li>
                                            <li class="num_sorting_btn"><span>6</span></li>
                                            <li class="num_sorting_btn"><span>12</span></li>
                                            <li class="num_sorting_btn"><span>24</span></li>
                                        </ul>
                                    </li>
                                </ul>

                            </div>

                            <!-- Product Grid -->
                            @if (Model.TotalItemCount == 0)
                            {
                                <hr />
                                <br />
                                <h5 style="text-align:center"><i><strong>#This product is currently not available in the shop or this product is out of stock or out of stock!?&#9785;</strong></i></h5>
                                <h6 style="text-align:center"><i><strong>&#9829;Thank you&#9829;</strong></i></h6>

                            }
                            else
                            {
                                <br />
                                <h5 style="text-align:center"><i>There are <i class="countItem" id="numDefault">@Model.PageSize</i> products ...</i></h5>
                                <div class="product-grid">
                                    @{
                                        double priceSale = 0;
                                        var img = "";
                                        LaptopMVC.Models.tb_productImages checkImg = new LaptopMVC.Models.tb_productImages();
                                        foreach (var item in Model)
                                        {
                                            checkImg = item.tb_productImages.FirstOrDefault(x => x.isDefault);

                                            if (checkImg != null)
                                            {
                                                img = checkImg.images;
                                            }
                                            if (item.isSale && item.pricesale != 0)
                                            {
                                                priceSale = (double)item.pricesale;
                                                double percent = (double)(((item.price - item.pricesale)/item.price)*100);
                                                <div class="product-item @item.tb_productcategory.title.ToLower()">
                                                    <div class="product discount product_filter">
                                                        <div class="product_image">
                                                            <img src="~/ManagerUploads/@img" alt="">
                                                        </div>
                                                        <div class="favorite favorite_left"></div>
                                                        <div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center"><span>@Math.Round(percent)%</span></div>
                                                        @if (item.quantity == 0)
                                                        {
                                                            <div class="product_info">
                                                                <h6 class="product_name">@Html.ActionLink(@item.title, "Index", "Product", new { id = item.id }, null)</h6>
                                                                <div class="product_price">Tạm hết hàng</div>
                                                                <div class="product_param" style="display:none;">@item.cpu</div>
                                                                <div class="product_param" style="display:none;">@item.ram</div>
                                                                <div class="product_param" style="display:none;">@item.screen</div>
                                                                <div class="product_param" style="display:none;">@item.harddrive</div>
                                                            </div>
                                                        }
                                                        else
                                                        {
                                                            <div class="product_info">
                                                                <h6 class="product_name">@Html.ActionLink(@item.title, "Index", "Product", new { id = item.id }, null)</h6>
                                                                <div class="product_price">@priceSale.ToString("#,##0").Replace(',', '.')VND <span>@item.price.ToString("#,##0").Replace(',', '.')VND</span></div>
                                                                <div class="product_price">SL: @item.quantity</div>
                                                                <div class="product_param" style="display:none;">@item.cpu</div>
                                                                <div class="product_param" style="display:none;">@item.ram</div>
                                                                <div class="product_param" style="display:none;">@item.ram</div>
                                                                <div class="product_param" style="display:none;">@item.screen</div>
                                                                <div class="product_param" style="display:none;">@item.harddrive</div>
                                                            </div>
                                                        }
                                                    </div>
                                                    @if (item.quantity != 0)
                                                    {
                                                        <div class="red_button add_to_cart_button">@Html.ActionLink("add to cart", "AddToCart", "ShoppingCart", new { id = item.id }, null)</div>
                                                    }
                                                    else
                                                    {
                                                        <div class="red_button add_to_cart_button">@Html.ActionLink("add to cart", "Check", "ShoppingCart")</div>
                                                    }
                                                </div>
                                            }
                                            else if (item.isHot && item.pricesale != 0)
                                            {
                                                priceSale = (double)item.pricesale;
                                                <div class="product-item @item.tb_productcategory.title.ToLower()">
                                                    <div class="product discount product_filter">
                                                        <div class="product_image">
                                                            <img src="~/ManagerUploads/@img" alt="">
