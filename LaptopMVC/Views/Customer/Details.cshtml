<link rel="stylesheet" type="text/css" href="~/Content/client/styles/categories_responsive.css">


<div class="container product_section_container">
    <div class="row">
        <div class="col product_section clearfix">

            <!-- Breadcrumbs -->

            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li><a href="/"><i class="fa fa-angle-right" aria-hidden="true"></i>Customer</a></li>
                    <li><a href="/"><i class="fa fa-angle-right" aria-hidden="true"></i>List Order</a></li>
                    <li class="active"><a href="/"><i class="fa fa-angle-right" aria-hidden="true"></i>Detail Order</a></li>
                </ul>
            </div>

            <!-- Sidebar -->
            <!-- Main Content -->

            <div class="row">
                <div class="col-md-12" style="margin-top:-100px">
                    <span id="type_order" style="display:none">@Model.typeOrder</span>
                    <section class="vh-100">
                        <div class="container py-5 h-100">
                            <div class="row d-flex justify-content-center align-items-center h-100">
                                <div class="col-12">
                                    <div class="card card-stepper text-black" style="border-radius: 16px;">
                                        <div class="card-body p-5">
                                            <ul id="progressbar-2" class="d-flex justify-content-between mx-0 mt-0 mb-5 px-0 pt-0 pb-2">
                                                <li class="step0 active text-center" id="step1"></li>
                                                <li class="step0 active text-center" id="step2"></li>
                                                <li class="step0 text-center" id="step3"></li>
                                                <li class="step0 text-muted text-end" id="step4"></li>
                                            </ul>

                                            <div class="d-flex justify-content-between">
                                                <div class="d-lg-flex align-items-center">
                                                    <i class="fa fa-cart-arrow-down fa-3x me-lg-4 mb-3 mb-lg-0"></i>
                                                    <div>
                                                        <p style="margin-left:5px;" class="fw-bold mb-0">Processed</p>
                                                    </div>
                                                </div>
                                                <div class="d-lg-flex align-items-center">
                                                    <i class="fa fa-archive fa-3x me-lg-4 mb-3 mb-lg-0"></i>
                                                    <div>
                                                        <p style="margin-left:5px;" class="fw-bold mb-0">Packed</p>
                                                    </div>
                                                </div>
                                                <div class="d-lg-flex align-items-center">
                                                    <i class="fa fa-truck fa-3x me-lg-4 mb-3 mb-lg-0"></i>
                                                    <div>
                                                        <p style="margin-left:5px;" class="fw-bold mb-0">Shipping</p>
                                                    </div>
                                                </div>
                                                <div class="d-lg-flex align-items-center">
                                                    <i class="fa fa-home fa-3x me-lg-4 mb-3 mb-lg-0"></i>
                                                    <div>
                                                        <p style="margin-left:5px;" class="fw-bold mb-0">Arrived</p>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                    <div class="col-md-12" style="margin-top:-60px">
                        <div class="page-content container">
                            <div class="container px-0">
                                <div class="row mt-4">
                                    <div class="col-12 col-lg-12">
                                        <div class="row">
                                            <div class="col-12">
                                                <div class="text-center text-150">
                                                    @*<i class="fa fa-book fa-2x text-success-m2 mr-1"></i>*@
                                                    <span class="text-default-d3">Detail Invoice</span>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- .row -->

                                        <hr class="row brc-default-l1 mx-n1 mb-4" />

                                        <div class="row">
                                            <div class="col-sm-6">
                                                <div>
                                                    <span class="text-sm text-grey-m2 align-middle">To: </span>
                                                    <span class="text-600 text-110 text-blue align-middle">@Model.customername</span>
                                                </div>
                                                <div class="text-grey-m2">
                                                    <div class="my-1">
                                                        <i class="fa fa-location-arrow"></i> : @Model.Address
                                                    </div>
                                                    <div class="my-1">
                                                        <i class="fa fa-envelope"></i> : @Model.email
                                                    </div>
                                                    <div class="my-1"><i class="fa fa-phone fa-flip-horizontal text-secondary"></i> : <b class="text-600">@Model.phone</b></div>
                                                </div>
                                            </div>
                                            <!-- /.col -->

                                            <div class="text-95 col-sm-6 align-self-start d-sm-flex justify-content-end">
                                                <hr class="d-sm-none" />
                                                <div class="text-grey-m2">

                                                    <div class="my-2"><i class="fa fa-circle text-blue-m2 text-xs mr-1"></i> <span class="text-600 text-90">ID:</span> @Model.code</div>

                                                    <div class="my-2"><i class="fa fa-circle text-blue-m2 text-xs mr-1"></i> <span class="text-600 text-90">Create Date:</span> @Model.createdate</div>

                                                    <div class="my-2">
                                                        <i class="fa fa-circle text-blue-m2 text-xs mr-1"></i> <span class="text-600 text-90">Status:</span>
                                                        @if (Model.typeOrder == 0)
                                                        {
                                                            <span class="badge badge-warning badge-pill px-25">Received</span>
                                                        }
                                                        else if (Model.typeOrder == 1)
                                                        {
                                                    <span class="badge badge-warning badge-pill px-25">Paid</span>
                                                        }
                                                        else if (Model.typeOrder == 2)
                                                        {
                                                    <span class="badge badge-warning badge-pill px-25">Canceled</span>
                                                        }
                                                        else
                                                        {
                                                    <span class="badge badge-warning badge-pill px-25">Shipping</span>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- /.col -->
                                        </div>

                                        <div class="mt-4">
                                            <div class="row text-600 text-white bgc-default-tp1 py-25">
                                                <div class="d-none d-sm-block col-1">#</div>
                                                <div class="col-9 col-sm-5">Name Product</div>
                                                <div class="d-none d-sm-block col-4 col-sm-2">Quantity</div>
                                                <div class="d-none d-sm-block col-sm-2">Price(VND)</div>
                                                <div class="col-2">Amount(VND)</div>
                                            </div>
                                            <div class="text-95 text-secondary-d3">
                                                @{
                                                    var tb_Orderdetail = Model.tb_orderdetail.ToList();
                                                    int i = 1;
                                                    double money = 0;

                                                    foreach (var item in tb_Orderdetail)
                                                    {
                                                        if (i % 2 == 0)
                                                        {
                                                            <div class="row mb-2 mb-sm-0 py-25">
                                                                <div class="d-none d-sm-block col-1">@i</div>
                                                                <div class="col-9 col-sm-5">@item.tb_product.title</div>
                                                                <div class="d-none d-sm-block col-2">@item.quantity</div>
                                                                @if (item.tb_product.pricesale == 0)
                                                                {
                                                                    money = (double)(item.tb_product.price * item.quantity);
                                                                    <div class="d-none d-sm-block col-2 text-95">@item.tb_product.price.ToString("#,##0").Replace(',', '.')</div>
                                                                }
                                                                else
                                                                {
                                                                    double temp = (Double)item.tb_product.pricesale;
                                                                    money = (double)(temp * item.quantity);
                                                                    <div class="d-none d-sm-block col-2 text-95">@temp.ToString("#,##0").Replace(',', '.')</div>
                                                                }

                                                                <div class="col-2 text-secondary-d2">@money.ToString("#,##0").Replace(',', '.')</div>
                                                            </div>
                                                        }
                                                        else
                                                        {
                                                            <div class="row mb-2 mb-sm-0 py-25 bgc-default-l4">
                                                                <div class="d-none d-sm-block col-1">@i</div>
                                                                <div class="col-9 col-sm-5">@item.tb_product.title</div>
                                                                <div class="d-none d-sm-block col-2">@item.quantity</div>
                                                                @if (item.tb_product.pricesale == 0)
                                                                {
                                                                    money = (double)(item.tb_product.price * item.quantity);
                                                                    <div class="d-none d-sm-block col-2 text-95">@item.tb_product.price.ToString("#,##0").Replace(',', '.')</div>
                                                                }
                                                                else
                                                                {
                                                                    double temp = (Double)item.tb_product.pricesale;
                                                                    money = (double)(temp * item.quantity);
                                                                    <div class="d-none d-sm-block col-2 text-95">@temp.ToString("#,##0").Replace(',', '.')</div>
                                                                }
                                                                <div class="col-2 text-secondary-d2">@money.ToString("#,##0").Replace(',', '.')</div>
                                                            </div>
                                                        }
                                                        i++;
                                                    }
                                                }
                                            </div>

                                            <div class="row border-b-2 brc-default-l2"></div>
                                            @{
                                                double sumMoney = (double)Model.SumMoney;
                                                double priceVAT = (sumMoney * 0.1);
                                                double amount = sumMoney + priceVAT;
                                            }
                                            <div class="row mt-3 ">
                                                <div class="col-12 col-sm-5 text-grey text-90 order-first order-sm-last">
                                                    <div class="row my-2">
                                                        <div class="col-7 text-right">
                                                            Money
                                                        </div>
                                                        <div class="col-5">
                                                            <span class="text-120 text-secondary-d1">@sumMoney.ToString("#,##0").Replace(',', '.')VND</span>
                                                        </div>
                                                    </div>

                                                    <div class="row my-2">
                                                        <div class="col-7 text-right">
                                                            VAT (10%)
                                                        </div>
                                                        <div class="col-5">
                                                            <span class="text-110 text-secondary-d1">@priceVAT.ToString("#,##0").Replace(',', '.')VND</span>
                                                        </div>
                                                    </div>

                                                    <div class="row my-2 align-items-center bgc-primary-l3 p-2">
                                                        <div class="col-7 text-right">
                                                            Total Amount
                                                        </div>
                                                        <div class="col-5">
                                                            <span class="text-150 text-success-d3 opacity-2">@amount.ToString("#,##0").Replace(',', '.')VND</span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <hr />

                                            <div>
                                                <span class="text-secondary-d1 text-105">Thank you for your business &#9829;!</span>
                                                @if (Model.typeOrder == 3)
                                                {
                                                    @Html.ActionLink("Recevied", "Recevied", new { id = Model.id }, new { @class = "btn btn-primary btn-bold px-4 float-right mt-3 mt-lg-0" })
                                                }

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Content/client/js/categories_custom.js"></script>
    <script>

        var type = document.getElementById("type_order").innerHTML;
        var style = document.createElement("style");
        // Thêm phần tử style vào cuối phần body của trang HTML
        document.body.appendChild(style);

        var step1 = document.querySelector("#step1");
        var step2 = document.querySelector("#step2");
        var step3 = document.querySelector("#step3");
        var step4 = document.querySelector("#step4");
        var bar1 = document.querySelector("#progressbar-2 li:nth-child(1):after");
        var bar2 = document.querySelector("#progressbar-2 li:nth-child(2):after");
        var bar3 = document.querySelector("#progressbar-2 li:nth-child(3):after");

        // Thực hiện các thao tác tương ứng với từng giá trị của biến type
        if (type == 0) {
            step1.classList.add("active");
            step2.classList.add("active");
            bar1.style.background = "#6520ff";
            bar2.style.background = "#c5cae9";
            bar3.style.background = "#c5cae9";
        } else if (type == 3) {
            step1.classList.add("active");
            step2.classList.add("active");
            step3.classList.add("active");
            bar1.style.background = "#6520ff";
            bar2.style.background = "#6520ff";
            bar3.style.background = "#c5cae9";
        } else if (type == 1) {
            step1.classList.add("active");
            step2.classList.add("active");
            step3.classList.add("active");
            step4.classList.add("active");
            style.innerHTML = `
            #progressbar-2 #step4:before {
                content: '\\2713';
            }
`;
            bar1.style.background = "#6520ff";
            bar2.style.background = "#6520ff";
            bar3.style.background = "#6520ff";
        } else if (type == 2) {
            step1.classList.add("active");
            step2.classList.add("active");
            step3.classList.add("active");
            step4.classList.add("active");
            bar1.style.background = "#6520ff";
            bar2.style.background = "#6520ff";
            bar3.style.background = "#6520ff";
        }
    </script>

}




