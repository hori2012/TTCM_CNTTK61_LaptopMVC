@model LaptopMVC.Models.tb_product

@{
    ViewBag.Title = "Chi tiết sản phầm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/admin" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Chi tiết</a>
        </li>
    </ul>
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Chi tiết sản phẩm</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin/tb_product">Home</a></li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin chi tiết Sản phẩm</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            Hình ảnh
                        </dt>

                        <dd>
                            @{
                                var img = Model.tb_productImages.FirstOrDefault(x => x.isDefault);
                                if (img != null)
                                {
                                    <img src="~/ManagerUploads/@img.images" width="250" height="250" />
                                }
                            }
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.title)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.title)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.description)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.description)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.detail)
                        </dt>

                        <dd>
                            @Html.Raw(Model.detail.Replace(".♦", ".<br>♦"))
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.cpu)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.cpu)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.ram)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.ram)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.screen)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.screen)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.harddrive)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.harddrive)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.price)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.price)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.pricesale)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.pricesale)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.quantity)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.quantity)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.isSale)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.isSale)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.isHot)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.isHot)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.isActive)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.isActive)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.viewcount)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.viewcount)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.tb_productcategory.title)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.tb_productcategory.title)
                        </dd>

                    </dl>
                </div>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">

            <p>
                @Html.ActionLink("Sửa", "Edit", new { id = Model.id }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-danger" })
            </p>
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>


