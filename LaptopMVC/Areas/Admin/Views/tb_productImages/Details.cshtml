@model LaptopMVC.Models.tb_productImages

@{
    ViewBag.Title = "Chi tiết ảnh";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/homeadmin" class="nav-link">Trang chủ</a>
        </li>
    </ul>
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản lý danh mục</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin/tb_productimage">Home</a></li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title"> @ViewBag.Title</h3>

            <div class="card-tools">
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-6">
                </div>
            </div>
            <div>
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.images)
                    </dt>

                    <dd>
                        <img src="~/ManagerUploads/@Model.images" width="250" height="250" />
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.isDefault)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.isDefault)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.tb_product.title)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.tb_product.title)
                    </dd>

                </dl>
            </div>
            <div class="row">
                <div class="col-6"></div>
                <div class="col-6" style="text-align:right;">

                </div>
            </div>

        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            <p>
                @Html.ActionLink("Sửa", "Edit", new { id = Model.id }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-danger" })
            </p>
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>



